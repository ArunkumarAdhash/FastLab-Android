<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="@dimen/margin_5"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_user_name"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        tools:text="fdnmslkfdskdvcdfsgfdgfdgfd"
        android:layout_weight="1"
        android:maxLines="2"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_10"
        android:lineSpacingExtra="5.5sp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_11"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_user_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="1"
        tools:text="fdnmslkfdskd"
        android:lineSpacingExtra="5.5sp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_11"
        app:layout_constraintStart_toEndOf="@+id/textview_user_name"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_user_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:lineSpacingExtra="5.5sp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_11"
        tools:text="fdnmslkfdskd"
        app:layout_constraintStart_toEndOf="@+id/textview_user_age"
        app:layout_constraintTop_toTopOf="parent" />



    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageview_edit"
        android:layout_width="@dimen/margin_25"
        android:layout_height="@dimen/margin_25"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/margin_15"
        android:layout_marginBottom="@dimen/margin_5"
        app:srcCompat="@drawable/ic_edit_icon" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageview_remove"
        android:layout_width="@dimen/margin_25"
        android:layout_height="@dimen/margin_25"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_5"
        app:srcCompat="@drawable/ic_close_icon" />


</LinearLayout>